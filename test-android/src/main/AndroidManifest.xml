<!--
  Describes an Android application with a single Instrumentation,
  which runs the Objenesis TCK.

  Author: Ian Parkinson, Google Inc.
-->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.easymock.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="25" />

    <application android:allowBackup="false">
        <uses-library android:name="android.test.runner" />
    </application>

    <instrumentation
        android:name=".AndroidTck"
        android:targetPackage="org.easymock.android">
    </instrumentation>
</manifest>
